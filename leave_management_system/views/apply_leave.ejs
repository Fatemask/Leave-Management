      <div style="text-align: center;" style="margin-top: 50px" class="mt-4">
        <h2>Application Form</h2>
    </div>
    <div class="row applyform">
      <div class="col-md-7">
        <form class="container apply mt-4 mb-4" action="/professor/<%=prof.uid%>/apply" method="POST">
          <label for="subject">Subject</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input type="text" id="subject" placeholder="subject" name="subject" /> <br/>
          <label for="type" >Leave Type</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <select name="type" id="type">
              <option value="casual">Casual Leave</option>
              <option value="earned">Earned Leave</option>
              <option value="onduty">On Duty Leave</option>
              <option value="medical">Medical Leave</option>
              <option value="maternity">Maternity Leave</option>
              <option value="other">Other</option>
          <select/> <br/>
          <label for="from" >Leave Start Date</label>&nbsp;&nbsp;&nbsp;&nbsp;
          <input type="date" name="from" id="from"/> <br/>
          <label for="to">Joining Date</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input type="date" name="to" id="to" /> <br/>
          <div style="text-align: right;">
              <input type="submit" class="btn-primary btnsub"/>
          </div>
        </form>
      </div>
      <div class="col-md-5">
        <img src="/img/apply_page_pic.svg" alt="apply svg" class="svgcss">
      </div>
    </div>
